  
<html>
    <head>
        <title>
                To-DO List app
        </title>
        <link rel="stylesheet" href="/static/css/main.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://use.fontawesome.com/326f4466cf.js"></script>
        <script src="https://kit.fontawesome.com/3317dad89a.js" crossorigin="anonymous"></script>

        <style> 
            textarea {
              width: 100%;
              height: 75px;
              padding: 12px 20px;
              border: 0;
              border-radius: 4px;
              font-size: 16px;
              resize: none;
            }
            </style>

    </head>
    <body>
            <h1 class="text-center"><i class="fas fa-list-ul"></i> TODO App </h1>

            <div class="col-md-8 offset-md-2 d-flex justify-content-center main" style="border: 5px solid black;">
                <div class="container">
                    <form action="/create-contact" method="POST">
                        <div class="form-container">
                            <div class="description" style="border-top: 1px solid rgb(190, 190, 190);
                            border-bottom: 1px solid rgb(190, 190, 190);">
                                <label for="description">Description</label><br />
                                <!-- enter the description -->
                                <textarea id="desc-text" name="description" rows="2" cols="150">what do you need to do?</textarea>
                            </div>

                            <div class="row" style="border-bottom: 1px solid rgb(190, 190, 190); margin: 50px 0px 25px 0px;">
                                <div class="col-sm">
                                    <label for="category">Category</label>
                                    <br>
                                    <select name="Category" id="category">
                                      <option value="#">Option 1</option>
                                      <option value="#">Option 2</option>
                                      <option value="#">Option 3</option>
                                      <option value="#">Option 4</option>
                                    </select>
                                </div>
                                <div class="col-sm">
                                    <label for="dueDate">Due Date</label>
                                    <br>
                                    <input type="date" id="due-date" name="dueDate">
                                </div>
                            </div>

                            <div class="button-row" style="border-bottom: 1px solid rgb(190, 190, 190); margin: 50px 0px 25px 0px;">
                                <button type="button" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;&nbsp;Add Task&nbsp;&nbsp;</button>
                                <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i>&nbsp;&nbsp;Delete Task&nbsp;&nbsp;</button>
                            </div>

                            <div class="task-row">
                                <ul>
                                    <li>
                                        <input type="checkbox" id="#" name="#" value="#">
                                        <p>Task Description</p>
                                        <i class="far fa-calendar-alt"></i>
                                        <p>Jan 31,2021</p>
                                    </li>
                                </ul>
                            </div>


                        </div>
                       
                    </form>
                </div>
            </div>
            

            <script type="text/javascript" src="/js/home.js">
            </script>

    </body>
</html>